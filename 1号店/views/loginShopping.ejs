<% include base/head.ejs %>
<% include base/nav-loginShopping.ejs %>
<link rel="stylesheet" href="/stylesheets/rong/loginShopping.css">
<div class="box">
    <div class="wrap">
        <h1 style="float: left;padding-top: 10px;">
            <a href="index">
                <img src="/images/rong/logo1.png" alt="" class="logo">
            </a>
            <img src="/images/rong/logo_txt.png" alt="" class="logo_txt">
        </h1>
        <!-- 搜索框 -->
        <div class="search">
            <input type="text" placeholder="请输入关键词">
            <a href="">
                <img src="/images/rong/sousuo1.png" alt="" class="search_btn iconfont">
            </a>
        </div>
        </div>
    </div>
    <div style="clear: both;"></div>
    <div class="no-empty">
        <div class="chose">
            <ul style="display: flex;justify-content: space-around;">
                <li style="line-height: 50px;display: flex;justify-content: space-around;width: 8%;">
                    <input type="checkbox" name=""  class="allchose-input quanxuan" id="" style="appearance: none;-webkit-appearance: none;">
                    <span style="font-size: 12px;color: #666;line-height: 50px;">全选</span>
                </li>
                <li style="width:20%;" class="static-li">商品信息</li>
                <li class="static-li">单价(元)</li>
                <li class="static-li">数量</li>
                <li class="static-li">小计(元)</li>
                <li class="static-li">操作</li>
            </ul>
        </div>

        <div class="cart_list">
            <% for(var i=0;i<shopcargood.length;i++){ %>
            <div class="everyxinxi" id="<%= shopcargood[i].id %>">
            <div class="cart_list_wrap">
                <ul class="cart_item activity">
                    <li class="item item_line main_item clearfix">
                        <div class="cart_prod clearfix">
                            <ul style="display: flex; justify-content: space-between;align-items: center;">
                                <li style="width: 0.1%;" >
                                    <input type="checkbox" name="" class="allchose-input checkbox" id="" style="appearance: none;-webkit-appearance: none;margin-left: 11px;">
                                </li>
                                <li style="width: 34%;display: flex;align-items: center;">
                                    <p><img src="<%= shopcargood[i].img %>" alt="" style="width: 120px;"></p>
                                    <p style="font-size: 12px;width: 90%;margin-left: 5px;line-height: 20px;"><%= shopcargood[i].miaoshu %></p>
                                </li>
                                <li class="oneprice">
                                    <p class="price"><%= shopcargood[i].price %></p>
                                </li>
                                <li style="display: flex;width: 8%;">
                                    <div class="add" type="addclick">
                                        +
                                    </div>
                                    <input type="text" value='<%= shopcargood[i].num %>' style="width: 20px;height: 18px;padding-left: 18%;" class="number">
                                    <div class="jian">
                                        -
                                    </div>
                                </li>
                                <li style="margin-right: 25px;width: 8%;">
                                    <p class="xiaoji"><%=  shopcargood[i].xiaoji %></p>
                                </li>
                                <li style="margin-right: 30px;" class="delanniu">
                                    <img src="/images/rong/shanchuhui.png" alt="" class='del' style="display: block;">
                                    <img src="/images/rong/shanchuhong.png" alt="" class="delred" style="display: none;">
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
            </div>
            <% } %>

        </div>
        <div class="chose">
                <ul class="shopcar-bottom">
                    <li>合计:</li>
                    <li>￥<span class="allprice">0</span></li>
                    <li class="jiesuan">去结算</li>
                </ul>
            </div>
    </div>
    <div class="empty">
        <div class="no_prod offline clearfix">
            <div class="img_wrap">
                <img src="/images/rong/no_goods.gif" alt="" style="width: 300px;height: 300px;">
            </div>
            <div class="info" style="float: left;">
                <p>
                    购物车还是空的呢，快去采购吧~
                </p>
                <div class="btn_box">
                    <a href="index" class="confirm">去逛逛</a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 猜你喜欢 -->
    <div class="sale_prod_list">
        <div class="sale_prod_tit">
            <h4 class="hot_sale_tit">
                <img src="/images/rong/cainixihuan.png" alt="">
                猜您喜欢
            </h4>
            <p>实时推荐最适合您的商品</p>
        </div>


        <div style="width: 90%;margin:0 auto;position: relative;" class="cheap_prod">
            <img src="/images/rong/fangxiangzuo.png" alt="" class="left">
            <img src="/images/rong/fangxiangyou.png" alt="" class="right">
        <div class="sale_prod_cont hot_sale_list" style="position: relative; padding: 0; width: 83%;margin:0 auto ;height: 520px;overflow: hidden;">

            <div class="sale_scroll_box" style="height:520px;">
                <ul class="sale_scroll_ul clearfix" style="width: 400%; margin-left: 0px;position: absolute;z-index: 5;top: 0;left: 0;" id="move">
                   
                    <% for(var i=0;i<results.length;i++){ %>
                    <li>
                        <% for(var j=0;j<results[i].list.length;j++){ %>
                        <div class="sale_item">
                            <div class="prod_img">
                                <img src="<%= results[i].list[j].img %>" alt="" style="width: 150px;height: 150px;">
                            </div>
                            <div class="prod_info">
                                <p class="p_pri">
                                    ￥
                                    <b><%= results[i].list[j].price %></b>
                                </p>
                                <p class="p_tit"><%= results[i].list[j].miaoshu %></p>
                            </div>
                        </div>
                        <% } %>
                    </li>
                    <% } %>

                </ul>
            </div>
            <div class="view_dot">
                <span class="cur reddian"></span>
                <span class="reddian"></span>
                <span class="reddian"></span>
                <span class="reddian"></span>
            </div>

        </div>
        </div>
    </div>
    <div style="height: 10px;"></div>
    <p style="display: none;" id="panduan"><%= msg %></p>
</div>
<script src='/javascripts/rong/loginShopping.js'></script>
<% include base/copyright.ejs %>
<% include base/foot.ejs %>