<!-- 热点活动 -->
<div id="hot">
    <div class="ht">
        <h3>热点活动</h3>
        <div></div>
    </div>
    <div class="hb">
        <div class="hbl">
            <h2 style="color: #333;margin-top:50px;margin-left: 30px;cursor: pointer;">领券中心</h2>
            <h3 style="color: #D2A55F;margin-top: 10px;margin-left: 30px;cursor: pointer;">领券中心</h3>
