</div>
<!-- 金币商品 -->
<div id="something">
    <div class="sth-t">
        <h3>金币商品</h3>
        <div></div>
    </div>
    <div class="sth-b">
        <div  class="all" style="width: 40%;margin:0 auto;">
            <ul>
                <li class="quanbu" >全部商品</li>
                <li class="quanbu" style="color: #333;font-weight: 400;">食品饮料</li>
                <li class="quanbu" style="color: #333;font-weight: 400;">服饰鞋帽</li>
                <li class="quanbu" style="color: #333;font-weight: 400;">医药保健</li>
             
            </ul>
			<div style="clear:both;"></div>
        </div>    
		<div id="golbsign-main">
			<% for(var j=0;j<result.length;j++){ %>
			<div class="xiangqing-main">
				<% for(var i=0;i<result[j].list.length;i++){ %>
				<div class="xiangqing">
				    <img src=<%= result[j].list[i].img %> alt="">
				    <div class="desc">
				        <p class="name"><%= result[j].list[i].miaoshu %></p>
				        <span class="price"><%= result[j].list[i].price %></span>
				        <span style="float:left;margin-left: 5px;margin-top:15px;color:#333;font-size:12px;cursor: pointer;">+</span>
				        <span style="float:left;margin-left:3px;margin-top:13px;color:#cab28c;font-weight:600;cursor: pointer;"><%= result[j].list[i].golb %></span>
				        <span style="float:left;margin-left: 5px;margin-top:15px;color:#333;font-size:12px;cursor: pointer;">金币</span>
				        <div class="yuanjia">
				            <span style="text-decoration: line-through;color: #999999;font-size:10px;float:left;margin-left:10px;">￥<%= result[j].list[i].oldprice %></span>
				            <div class="buy">
				                <img width="50%" style="margin-top: 3px;" src="/images/han/shoppingcar.png" alt="">
				            </div>
				        </div>
				    </div>
				</div>
				<% } %>
			</div>
			<% } %>
		</div>
		
        
    </div>
</div>
<script>
var quanbu = document.querySelectorAll('.quanbu')
var xiangqingmain = document.querySelectorAll('.xiangqing-main')
for(var i=0;i<quanbu.length;i++){
	quanbu[i].index= i
	quanbu[i].onclick=function(){
		for(var j=0;j<xiangqingmain.length;j++){
			xiangqingmain[j].style.display='none'
			quanbu[j].style.color='#333'
			quanbu[j].style.fontWeight='normal'
		}
		xiangqingmain[this.index].style.display='flex'
		this.style.color='#bc9c66'
		this.style.fontWeight='bold'
	}
}
</script>
