<!-- 金币商品 -->
<div id="something">
    <div class="sth-t">
        <h3>金币商品</h3>
        <div></div>
    </div>
    <div class="sth-b">
        <div  class="all" style="width: 100%;height:20px">
            <ul>
                <li class="quanbu" style="margin-left:320px;">全部商品</li>
                <li class="quanbu" style="color: #333;font-weight: 400;">食品饮料</li>
                <li class="quanbu" style="color: #333;font-weight: 400;">服饰鞋帽</li>
                <li class="quanbu" style="color: #333;font-weight: 400;">医药保健</li>
                <li class="quanbu" style="color: #333;font-weight: 400;">手机数码</li>
            </ul>
        </div>    
		<div class="xiangqing-main">
			<% for(var i=0;i<result.length;i++){ %>
			<div class="xiangqing">
			    <img src=<%= result[i].img %> alt="">
			    <div class="desc">
			        <p class="name"><%= result[i].miaoshu %></p>
			        <span class="price"><%= result[i].price %></span>
			        <span style="float:left;margin-left: 5px;margin-top:15px;color:#333;font-size:12px;cursor: pointer;">+</span>
			        <span style="float:left;margin-left:3px;margin-top:13px;color:#cab28c;font-weight:600;cursor: pointer;"><%= result[i].golb %></span>
			        <span style="float:left;margin-left: 5px;margin-top:15px;color:#333;font-size:12px;cursor: pointer;">金币</span>
			        <div class="yuanjia">
			            <span style="text-decoration: line-through;color: #999999;font-size:10px;float:left;margin-left:10px;">￥<%= result[i].oldprice %></span>
			            <div class="buy">
			                <img width="50%" style="margin-top: 3px;" src="/images/han/shoppingcar.png" alt="">
			            </div>
			        </div>
			    </div>
			</div>
			<% } %>
		</div>
        
        
    </div>
</div>
